<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/thumbnail_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:background="@color/light_gray"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="W,9:8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description_tv"
        app:layout_constraintTop_toBottomOf="@id/thumbnail_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="?attr/colorOnPrimary"
        tools:text="내일 내가 살 집을 소개합니다. 내일 내가 살 집을 소개합니다. 내일 내가 살 집을 소개합니다. 내일 내가 살 집을 소개합니다. 내일 내가 살 집을 소개합니다. 내일 내가 살 집을 소개합니다. 내일 내가 살 집을 소개합니다."
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/bookmark_ib"
        android:background="@drawable/baseline_bookmark_border_24"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/thumbnail_iv"
        app:layout_constraintEnd_toEndOf="@+id/thumbnail_iv" />


</androidx.constraintlayout.widget.ConstraintLayout>